{
  "name": "@player1os/library-utility",
  "version": "1.0.0",
  "description": "A base library from which other libraries can be derived",
  "private": false,
  "main": "index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "~8.7.0",
    "npm": "~5.5.1"
  },
  "scripts": {
    "preversion": "git checkout . && git checkout master && git pull && npm run validate",
    "postversion": "git push && git push --tags && npm publish",
    "build": "node-js-library-build",
    "build:watch": "node-js-library-build-watch",
    "clean": "rm -rf index.js* && rm -rf types",
    "lint": "tslint {./,src/**/,test/**/}*.ts --project ./tsconfig.json",
    "lint:watch": "chokidar ./*.ts src/**/*.ts test/**/*.ts -c \"npm run lint\" --initial --silent",
    "test": "mocha --compilers ts:ts-node/register -r @player1os/ts-node-execute **/*.test.ts",
    "test:coverage": "nyc npm test",
    "test:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm test\" --initial --silent",
    "validate": "npm run clean && npm run build && npm run lint && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/node-js-library.git"
  },
  "keywords": [
    "node",
    "library"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Player1os/node-js-library/issues"
  },
  "homepage": "https://github.com/Player1os/node-js-library#readme",
  "devDependencies": {
    "@player1os/ts-node-execute": "^1.0.0",
    "@player1os/tsconfig": "^1.0.1",
    "@player1os/tslint-config": "^1.3.4",
    "@player1os/webpack-config": "^1.0.1",
    "@types/bluebird-global": "^3.5.3",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.47",
    "@types/webpack": "^3.0.14",
    "awesome-typescript-loader": "^3.3.0",
    "chai": "^4.1.2",
    "chokidar": "^1.7.0",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tsutils": "^2.12.1",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  }
}
